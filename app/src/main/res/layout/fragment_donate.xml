<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.drawerFrag.Donate">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/donates"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl40Donate"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl40Donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40"/>

        <TextView
            android:id="@+id/tvDonateToCare"
            android:text="@string/strDonateToCare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/gl40Donate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvDonateToCareDesc"
            android:text="No act of kindness, however small, is ever wasted. Its not about making a donation. Its about making a difference."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#858585"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDonateToCare"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvWhatDonateText"
            android:text="What you want to donate?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/tvDonateToCareDesc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/acsSelectCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_field_bg"
            android:padding="20dp"
            android:tooltipText="Select Category"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWhatDonateText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFingerVerifyFinish"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Continue"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/acsSelectCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>