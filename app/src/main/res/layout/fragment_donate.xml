<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.drawerFrag.Donate">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/donates"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl40Donate"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl40Donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40"/>

        <TextView
            android:id="@+id/tvDonateToCare"
            android:text="@string/strDonateToCare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/gl40Donate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl10Donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.12"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl90Donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>

        <TextView
            android:id="@+id/tvDonateToCareDesc"
            android:text="No act of kindness, however small, is ever wasted. Its not about making a donation. Its about making a difference."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#adadad"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDonateToCare"
            app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
            app:layout_constraintRight_toLeftOf="@+id/gl90Donate"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl95Donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl5Donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <TextView
            android:id="@+id/tvWhatDonateText"
            android:text="What you want to donate?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/tvDonateToCareDesc"
            app:layout_constraintLeft_toRightOf="@+id/gl5Donate"
            app:layout_constraintRight_toLeftOf="@+id/gl95Donate"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSelectCategoryDonate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvWhatDonateText"
            app:layout_constraintLeft_toRightOf="@+id/gl5Donate"
            app:layout_constraintRight_toLeftOf="@+id/gl95Donate"
            android:background="@drawable/edit_field_bg"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/acsSelectCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imgCategoryDropdown"/>

            <ImageView
                android:id="@+id/imgCategoryDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category_dropdown"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDonateSubmit"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="@string/strSubmitDonate"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_bg"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/clSelectCategoryDonate"
            app:layout_constraintLeft_toRightOf="@+id/gl5Donate"
            app:layout_constraintRight_toLeftOf="@+id/gl95Donate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>