<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/user_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/imgMoreOption"
                android:src="@drawable/ic_more_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvMemberHost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Host"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@color/buttonColor"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imgMoreOption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Karam Bajwa"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/civUserImage"/>

            <TextView
                android:id="@+id/tvMemberPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rammurthy nagar, Banglore"
                android:textSize="14sp"
                android:textColor="@color/colorLightGrey"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMemberName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/civUserImage"/>

            <TextView
                android:id="@+id/tvMemberCommunityOREvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 Communities, 1 Event"
                android:textSize="12sp"
                android:textColor="@color/colorLightGrey"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/civUserImage"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/civUserImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>