<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <com.rupins.drawercardbehaviour.CardDrawerLayout
       android:id="@+id/mainDrawerLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fitsSystemWindows="true"
       android:background="@color/buttonColor"
       tools:openDrawer="start">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/clToolbarLayout"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent">

               <include
                   android:id="@+id/includedCustomToolbar"
                   layout="@layout/custom_home_toolbar_layout" />

               <include
                   android:id="@+id/includedCustomToolbarWithouSearch"
                   layout="@layout/custom_toolbar_without_search_layout" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <fragment
               android:id="@+id/homeNavHostContainer"
               android:name="androidx.navigation.fragment.NavHostFragment"
               android:layout_width="0dp"
               android:layout_height="0dp"
               app:defaultNavHost="true"
               app:navGraph="@navigation/home_nav_graph"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/clToolbarLayout"
               app:layout_constraintBottom_toTopOf="@+id/mbnBottomNav"/>

           <com.etebarian.meowbottomnavigation.MeowBottomNavigation
               android:id="@+id/mbnBottomNav"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:mbn_circleColor="@color/buttonColor"
               app:mbn_backgroundBottomColor="@color/colorWhite"
               app:mbn_countBackgroundColor="#ff6f00"
               app:mbn_countTextColor="@color/colorWhite"
               app:mbn_defaultIconColor="#90a4ae"
               app:mbn_rippleColor="#2f424242"
               app:mbn_selectedIconColor="@color/colorWhite"
               app:mbn_shadowColor="#1f212121"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

       <!--app:menu="@menu/drawer_menu"
           app:headerLayout="@layout/drawer_header_layout"
           android:background="#00B2FF"
           app:itemIconTint="@color/colorWhite"
           app:itemTextColor="@color/colorWhite"-->
       <com.google.android.material.navigation.NavigationView
           android:id="@+id/homeNavView"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="start"
           android:fitsSystemWindows="true">

           <include
               android:id="@+id/includedCustomNavView"
               layout="@layout/custom_drawer_layout"/>
       </com.google.android.material.navigation.NavigationView>
   </com.rupins.drawercardbehaviour.CardDrawerLayout>
</layout>