<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvThankyouText"
                    android:text="Are you sure, you want to leave Fight Against Corona?"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl10Donate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.10"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl90Donate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.90"/>

                <TextView
                    android:id="@+id/tvExecutiveCallDonate"
                    android:text="After leaving the community you will not be able to send or recieve any messages or events in this community."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/tvThankyouText"
                    app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
                    app:layout_constraintRight_toLeftOf="@+id/gl90Donate"/>


                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvExecutiveCallDonate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tvLogoutNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/button_bg"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingLeft="46dp"
                        android:paddingRight="46dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/gl50Logout"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl50Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                    <TextView
                        android:id="@+id/tvLogoutYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:layout_margin="8dp"
                        android:textColor="@color/buttonColor"
                        android:background="@drawable/donate_okay_bg"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingLeft="46dp"
                        android:paddingRight="46dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/gl50Logout"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>