<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.frag.FingerRecognition">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/faceVerifyTopGL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.13"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left10ForgotGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right90ForgotGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

       <!-- <ImageView
            android:id="@+id/imgFaceVerifyIcon"
            android:src="@drawable/finger_scanner"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/faceVerifyTopGL"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"/>-->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavSuccessJoinVolunteer"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fingerprint_scanner_lottie"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/faceVerifyTopGL"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"/>

        <TextView
            android:id="@+id/tvAddFaceData"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:text="Add your fingerprint"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lavSuccessJoinVolunteer"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"/>

        <TextView
            android:id="@+id/tvAddFaceDataDesc"
            android:textSize="14sp"
            android:text="Place your finger on the sensor."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddFaceData"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFingerVerifyFinish"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Finish"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@+id/tvAddFaceDataDesc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>