<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.frag.SignUp">

        <TextView
            android:id="@+id/tvSignUpText"
            android:text="sign up"
            android:textAllCaps="true"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top6LoginGuidline"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"/>

        <TextView
            android:id="@+id/tvEnterSignUpDetails"
            android:text="Enter your details to continue."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvSignUpText"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top6LoginGuidline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.06"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left3LoginGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right97LoginGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFullname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Full Name"
            app:hintTextColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterSignUpDetails">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:background="@drawable/edit_field_bg"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Mobile"
            app:hintTextColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintTop_toBottomOf="@+id/tilFullname">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="16dp"
                android:maxLength="10"
                android:background="@drawable/edit_field_bg"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/strEmail"
            app:hintTextColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintTop_toBottomOf="@+id/tilMobile"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:background="@drawable/edit_field_bg"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/strPwd"
            app:hintTextColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintTop_toBottomOf="@+id/tilEmail"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#808080">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="16dp"
                android:background="@drawable/edit_field_bg"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="@string/strSignUp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@+id/tilPassword"/>

        <TextView
            android:id="@+id/tvBySigningTerms"
            android:text="@string/strSignUpTermsText"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:padding="12dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColorLink="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp"/>

        <TextView
            android:id="@+id/tvdontAccountSignUp"
            android:text="@string/strAlreadyAccountSignIn"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColorLink="@color/buttonColor"
            app:layout_constraintLeft_toRightOf="@+id/left3LoginGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right97LoginGuidline"
            app:layout_constraintBottom_toTopOf="@+id/top100LoginGuidline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top100LoginGuidline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>