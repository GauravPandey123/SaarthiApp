<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.frag.AadharVerification">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/aadharTopGL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left10ForgotGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right90ForgotGuidline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNameAadhar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name as on Aadhar"
            app:hintTextColor="@color/colorBlack"
            android:background="@drawable/edit_field_bg"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"
            app:layout_constraintTop_toBottomOf="@+id/aadharTopGL"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:background="@null"/>

        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAadharNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"

                app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
                app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"
                app:layout_constraintTop_toBottomOf="@+id/tilNameAadhar"
                android:inputType="phone"
                android:hint="XXXX - XXXX - XXXX - XXXX"
                android:background="@drawable/edit_field_bg"
                android:padding="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAadharNext"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"
            android:background="@drawable/button_bg"
            app:layout_constraintTop_toBottomOf="@+id/edtAadharNumber"/>

        <ImageView
            android:src="@drawable/aadhar_detail_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAadharNext"
            app:layout_constraintLeft_toRightOf="@+id/left10ForgotGuidline"
            app:layout_constraintRight_toLeftOf="@+id/right90ForgotGuidline"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>