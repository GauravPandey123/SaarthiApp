<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.chat.UpcomingEvent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl3UpcomingEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl97UpcomingEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.97"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl3UpcomingEvent"
                    app:layout_constraintRight_toLeftOf="@+id/gl97UpcomingEvent">

                    <TextView
                        android:id="@+id/tvCommunityTitle"
                        android:text="Fight Against Coronavirus"
                        android:textSize="17sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvCommunityTitleDesc"
                        android:text="Awareness about Coronaviurs and Help needy"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCommunityTitle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <ImageView
                        android:id="@+id/imgChatEvent"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/fight_corona"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toBottomOf="@+id/tvCommunityTitleDesc"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvAboutCommunity"
                        android:text="About Event"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        app:layout_constraintTop_toBottomOf="@+id/imgChatEvent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvAboutCommunityDesc"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In consectetur sit feugiat turpis elit. Cras duis euismod at vitae risus penatibus amet. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/tvAboutCommunity"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <View
                        android:id="@+id/viewUpcomingEvent"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvAboutCommunityDesc"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenue"
                        android:text="Venue"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:textColor="@color/colorLightGrey"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/viewUpcomingEvent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueStartDate"
                        android:text="Start Date :  "
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenue"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueStartDateText"
                        android:text="30 April, 2020 (Event ends on same day)"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:textColor="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenue"
                        app:layout_constraintLeft_toRightOf="@+id/tvVenueStartDate"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueTime"
                        android:text="Time :  "
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenueStartDateText"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueTimeText"
                        android:text="Time: 10 AM - 4 PM"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:textColor="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenueStartDateText"
                        app:layout_constraintLeft_toRightOf="@+id/tvVenueTime"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenuePlace"
                        android:text="Place :  "
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenueTimeText"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenuePlaceText"
                        android:text="Rajendra Colony, New Delhi"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:textColor="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenueTimeText"
                        app:layout_constraintLeft_toRightOf="@+id/tvVenuePlace"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueHostedBy"
                        android:text="Hosted By :  "
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenuePlaceText"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/tvVenueHostedByText"
                        android:text="Karam Bajwa"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:textColor="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenuePlaceText"
                        app:layout_constraintLeft_toRightOf="@+id/tvVenueHostedBy"
                        app:layout_constraintRight_toLeftOf="@+id/tvVenueViewProfile"/>

                    <TextView
                        android:id="@+id/tvVenueViewProfile"
                        android:text="View Profile"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:textColor="@color/colorPrimaryDark"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenuePlaceText"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <View
                        android:id="@+id/viewVenue"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/tvVenueHostedByText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clMembersLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewVenue"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:id="@+id/tvMemberJoined"
                            android:text="8 Members Joined"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:textColor="@color/colorLightGrey"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewMemberJoined"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvMemberJoined"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/chat_member_image_layout"
                            android:orientation="horizontal"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clJoinCommunity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clMembersLayout">

                        <TextView
                            android:text="@string/strShare"
                            android:textSize="18sp"
                            android:padding="12dp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clShareCommunity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/share_btn_bg"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clJoinCommunity"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:text="Edit"
                            android:textSize="18sp"
                            android:padding="12dp"
                            android:textColor="@color/buttonColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>