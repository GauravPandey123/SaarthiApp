<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.home.drawerFrag.RateOurApp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Karam Bajwa"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/civUserProfile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvHowMuchRateAppText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How much would you rate our app?"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.hsalf.smileyrating.SmileyRating
                android:id="@+id/srAppRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHowMuchRateAppText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvPleaseAnswerToHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Please, answer these questions to help in improving us?"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/srAppRating"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAppWasHelpful"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPleaseAnswerToHelp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tvWasHelpful"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Was the App Helpful ?"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textColor="#696969"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvWasHelpful"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYesAppHelpful"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/strYesAccept"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/gl50WasHelpful"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl50WasHelpful"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNoAppHelpful"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/button_no_bg"
                        android:textColor="#808080"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/gl50WasHelpful"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clConnectWithNeedy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/clAppWasHelpful"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tvConnectWithNeedyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Did the app helped you in connecting with the needy ?"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textColor="#696969"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvConnectWithNeedyText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYesConnectWithNeedy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/strYesAccept"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/gl50ConnectWithNeedy"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl50ConnectWithNeedy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNoConnectWithNeedy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/button_no_bg"
                        android:textColor="#808080"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/gl50ConnectWithNeedy"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clShareApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/clConnectWithNeedy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tvShareAppText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Would you love share this App ?"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textColor="#696969"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvShareAppText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYesShareApp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/strYesAccept"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/gl50ShareApp"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl50ShareApp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNoShareApp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/button_no_bg"
                        android:textColor="#808080"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/gl50ShareApp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clImproveAppSuggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/clShareApp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tvImproveAppSuggestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Help us improve the App, Any suggestion"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textColor="#696969"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtAppSuggestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:lines="5"
                    android:gravity="start|top"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:hint="Write your review here..."
                    android:background="@drawable/edit_field_bg"
                    app:layout_constraintTop_toBottomOf="@+id/tvImproveAppSuggestion"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitAppRating"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Submit"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:layout_marginTop="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@+id/clImproveAppSuggestion"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>