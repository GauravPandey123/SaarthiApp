<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvThankyouText"
                    android:text="Thank You!"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl10Donate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.10"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl90Donate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.90"/>

                <TextView
                    android:id="@+id/tvThankDescText"
                    android:text="@string/strDonatationRequestText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/tvThankyouText"
                    app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
                    app:layout_constraintRight_toLeftOf="@+id/gl90Donate"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lavSuccessDonate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/success_lottie_volunteer"
                    app:layout_constraintTop_toBottomOf="@+id/tvThankDescText"
                    app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
                    app:layout_constraintRight_toLeftOf="@+id/gl90Donate"/>

                <TextView
                    android:id="@+id/tvExecutiveCallDonate"
                    android:text="@string/strDonateExecutiveCall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/lavSuccessDonate"
                    app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
                    app:layout_constraintRight_toLeftOf="@+id/gl90Donate"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDonateOkayPopup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Okay!"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/donate_okay_bg"
                    android:textColor="@color/buttonColor"
                    app:layout_constraintTop_toBottomOf="@+id/tvExecutiveCallDonate"
                    app:layout_constraintLeft_toRightOf="@+id/gl10Donate"
                    app:layout_constraintRight_toLeftOf="@+id/gl90Donate"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>