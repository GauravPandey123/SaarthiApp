<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="60dp"
    android:background="@drawable/ic_red_marker">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFeedImageUser"
            android:src="@drawable/profile_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvPostImageUsername"
            android:text="John Doe"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/imgFeedImageUser"
            app:layout_constraintLeft_toRightOf="@+id/imgFeedImageUser" />

        <TextView
            android:id="@+id/tvPostImageLocation"
            android:text="Mumbai"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPostImageUsername"
            app:layout_constraintLeft_toRightOf="@+id/imgFeedImageUser" />

</androidx.constraintlayout.widget.ConstraintLayout>