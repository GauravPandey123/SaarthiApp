<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.chat.Chat"
                android:background="#22adadad">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl4Community"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.04"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl96Community"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.96"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clJoinCommunity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl4Community"
                    app:layout_constraintRight_toLeftOf="@+id/gl96Community">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clChatSaarthiGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorWhite">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/saarthi_community"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/gl25JoinedCommunity"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl25JoinedCommunity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunity"
                            android:text="Be A Saarthi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#0E0E0E"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/gl25JoinedCommunity"
                            app:layout_constraintRight_toLeftOf="@+id/gl74JoinedCommunity"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunityDesc"
                            android:text="Be a charioteer of hope in helping the community around you."
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#858585"
                            android:lines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toBottomOf="@+id/tvBeSaarthiJoinCommunity"
                            app:layout_constraintLeft_toRightOf="@+id/gl25JoinedCommunity"
                            app:layout_constraintRight_toLeftOf="@+id/gl74JoinedCommunity"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl74JoinedCommunity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.80"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunityMembers"
                            android:text="3:42 pm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#858585"
                            android:gravity="end"
                            android:layout_marginTop="3dp"
                            app:layout_constraintLeft_toRightOf="@+id/gl74JoinedCommunity"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/tvChatMsgCount"
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/chat_count_bg"

                            app:layout_constraintTop_toBottomOf="@+id/tvBeSaarthiJoinCommunityMembers"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clChatFightAgainstGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@+id/clChatSaarthiGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorWhite">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civChatViewImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/community_created"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/gl25JoinedCommunity1"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl25JoinedCommunity1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunity1"
                            android:text="Fight Against Corona"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#0E0E0E"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/gl25JoinedCommunity1"
                            app:layout_constraintRight_toLeftOf="@+id/gl74JoinedCommunity1"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunityDesc1"
                            android:text="Lorem ipsum dolor sit amet, consectetur ipiscin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#858585"
                            android:lines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toBottomOf="@+id/tvBeSaarthiJoinCommunity1"
                            app:layout_constraintLeft_toRightOf="@+id/gl25JoinedCommunity1"
                            app:layout_constraintRight_toLeftOf="@+id/gl74JoinedCommunity1"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl74JoinedCommunity1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.80"/>

                        <TextView
                            android:id="@+id/tvBeSaarthiJoinCommunityMembers1"
                            android:text="3:42 pm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#858585"
                            android:gravity="end"
                            android:layout_marginTop="3dp"
                            app:layout_constraintLeft_toRightOf="@+id/gl74JoinedCommunity1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/tvChatMsgCount1"
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/chat_count_bg"

                            app:layout_constraintTop_toBottomOf="@+id/tvBeSaarthiJoinCommunityMembers1"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/tvSosHelpGroup"
                        android:text="SOS Help"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/clChatFightAgainstGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSOSHelpGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvSosHelpGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/tvSOSCommunityText"
                            android:text="SOS Chat 01"
                            android:textSize="14sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewSOSChat1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSOSCommunityText"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvSuggestedGroup"
                        android:text="Suggested for you"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/clSOSHelpGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSuggestedGroup1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvSuggestedGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/tvCommunityName1Text"
                            android:text="Community Name 01"
                            android:textSize="14sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewCommunity1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCommunityName1Text"/>

                        <TextView
                            android:id="@+id/tvCommunityName1Join"
                            android:text="Join"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSuggestedGroup2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/clSuggestedGroup1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/tvCommunityName2Text"
                            android:text="Community Name 02"
                            android:textSize="14sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewCommunity2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCommunityName2Text"/>

                        <TextView
                            android:id="@+id/tvCommunityName2Join"
                            android:text="Join"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>